{
  "manifest_version": 3,
  "name": "Sherlock",
  "version": "1.0",
  "description": "Displays movie & TV show info on hover (IMDB rating, type, seasons, genres, etc.)",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "settings.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}

